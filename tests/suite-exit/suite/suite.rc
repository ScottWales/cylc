#!Jinja2

[cylc]
    {% if EXIT_WHEN is defined %}
        exit when = {{ EXIT_WHEN }}
    {% endif %}
    [[event hooks]]
        timeout = PT5S
        abort on timeout = true

[scheduling]
    [[dependencies]]
        graph = """
            a => b
            c
        """

[runtime]
    [[a]]
        script = {{ environ['A_SCRIPT'] | default('true') }}
    [[b]]
        script = {{ environ['B_SCRIPT'] | default('true') }}
    [[c]]
        script = true
